<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LevelChooserController">
   <children>
      <Pane fx:id="pane" prefHeight="500.0" prefWidth="900.0">
         <children>
            <ImageView fitHeight="501.0" fitWidth="900.0">
               <image>
                  <Image url="@Images/MainBackground.png" />
               </image>
            </ImageView>
            <Button fx:id="easy" layoutX="772.0" layoutY="150.0" mnemonicParsing="false" onAction="#easy" style="-fx-background-color: #FF9100; -fx-background-radius: 15;" text="Easy" textFill="WHITE">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="17.0" />
               </font>
            </Button>
            <Button fx:id="normal" layoutX="762.0" layoutY="220.0" mnemonicParsing="false" onAction="#normal" style="-fx-background-color: #376C6C; -fx-background-radius: 15;" text="Normal" textFill="WHITE">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="17.0" />
               </font>
            </Button>
            <Button fx:id="hard" layoutX="772.0" layoutY="290.0" mnemonicParsing="false" onAction="#hard" style="-fx-background-color: #da1a1a; -fx-background-radius: 15;" text="Hard" textFill="WHITE">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="17.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
